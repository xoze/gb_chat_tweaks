{
  "name": "GBI Tweaks",
  "version": "1",
  "manifest_version": 2,
  "description": "Extra Tools for GB chat",
  
  "permissions": [
    "*://*.giantbomb.com/*",
    "storage"
  ],

  "options_ui": {
    "page": "options/options.html"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.giantbomb.com/chat/*",
        "*://www.giantbomb.com/infinite/*"
      ],
      "js": ["chat_style.js"]
    }
  ],
  "web_accessible_resources" : ["chat_tools.js"],
  "externally_connectable": {
    "matches": ["https://*.giantbomb.com/*"]
  }
}
